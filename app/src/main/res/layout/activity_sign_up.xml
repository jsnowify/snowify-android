<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secondbg"
    tools:context=".SignUp">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="198dp"
        android:layout_height="249dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signupicon" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Create Account"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/usernameSign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745" />

    <TextView
    android:id="@+id/hyperTxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/poppins"
    android:textSize="10dp"
    android:textColor="@color/subtext"
    android:text="Already Registered? Login here."
    app:layout_constraintBottom_toTopOf="@+id/usernameSign"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView8"
    app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/usernameSign"
        android:layout_width="219dp"
        android:layout_height="40dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/subtext"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.21" />

    <EditText
        android:id="@+id/emailSign"
        android:layout_width="219dp"
        android:layout_height="40dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/subtext"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameSign"
        app:layout_constraintVertical_bias="0.144" />

    <EditText
        android:id="@+id/passwordSign"
        android:layout_width="219dp"
        android:layout_height="40dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/subtext"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailSign"
        app:layout_constraintVertical_bias="0.187" />

    <EditText
        android:id="@+id/repasswordSign"
        android:layout_width="219dp"
        android:layout_height="40dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/subtext"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordSign"
        app:layout_constraintVertical_bias="0.28" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="155dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/morning"
        android:fontFamily="@font/poppins"
        android:text="Sign Up"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repasswordSign"
        app:layout_constraintVertical_bias="0.155" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Username:"
        android:textColor="@color/subtext"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/usernameSign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hyperTxt"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/poppins"
        android:text="Email:"
        android:textColor="@color/subtext"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hyperTxt" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:fontFamily="@font/poppins"
        android:text="Password:"
        android:textColor="@color/subtext"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hyperTxt" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Retype Password:"
        android:textColor="@color/subtext"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordSign" />
    />

</androidx.constraintlayout.widget.ConstraintLayout>